@using Models.Characters
@using Models.Settings;

<FluentCard AreaRestricted="false" Class="common-card-style">
	<div class="card-header">
		<h4>@HeaderText()</h4>
	</div>
	<div class="vertical-stack card-body">
		<div>
			<FluentSelect Label="Vice" TOption="ViceSetting" Items="ViceSettings" @bind-Value="Vice.Name" OptionValue="i => i.Name" OptionText="@(i => $"{i.Name} - {i.Description}")" OptionSelected="i => i == ViceSettings.First()" Id="select-vice" Class="big-select" />
		</div>
		<p>@Elaboration()</p>
		<div>
			<FluentTextField @bind-Value="Vice.Description" Label="@HelperText()" Placeholder="@ExamplePlaceholder()" AriaLabel="Vice description" Class="w100" Id="vice-description" />
		</div>
		@if (HasExamples)
		{
			<FluentAccordion>
				<FluentAccordionItem HeadingLevel="5" Heading="In world example purveyors">
					@foreach (var example in Examples())
					{
						<p>@example</p>
					}
				</FluentAccordionItem>
			</FluentAccordion>
		}
	</div>
</FluentCard>
