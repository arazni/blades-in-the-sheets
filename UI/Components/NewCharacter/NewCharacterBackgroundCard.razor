@using Models.Characters
@using Models.Settings;
@using UI.ViewModels

<FluentCard AreaRestricted="false" Class="common-card-style">
	<div class="card-header">
		<h4>Choose a background</h4>
	</div>
	<div class="vertical-stack card-body">
		<div>
			<FluentSelect TOption="BackgroundSetting" Items="BackgroundSettings" @bind-Value="Background.Name" OptionValue="i => i.Name" OptionText="@(i => $"{i.Name} - {i.Example}")" OptionSelected="i => i == BackgroundSettings.First()" Label="Background" Id="select-background" Class="big-select" />
		</div>
		<p>@Example()</p>
		<div>
			<FluentTextField @bind-Value="Background.Description" Label="What did you do before joining the crew?" Placeholder="A snoozing, indebted student" AriaLabel="Background description" Id="describe-background" Class="w100" />
		</div>
	</div>
</FluentCard>
