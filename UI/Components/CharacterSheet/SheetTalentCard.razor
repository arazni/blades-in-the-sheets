@using Models.Characters

<SheetCard @bind-IsFixMode="IsFixMode" Header="Talents">
	<CascadingValue Name="IsFixMode" Value="@IsFixMode">
		<MudGrid>
			@foreach(var attributeByName in Talent.AttributesByName)
			{
				<MudItem Class="flex-grow-1">
					<SheetTalentAttribute Attribute="attributeByName.Value" Name="@attributeByName.Key" />
				</MudItem>
			}
		</MudGrid>
	</CascadingValue>
</SheetCard>

@code
{
	[Parameter, EditorRequired]
	public Talent Talent { get; set; } = Talent.Empty();

	public bool IsFixMode { get; set; } = false;
}