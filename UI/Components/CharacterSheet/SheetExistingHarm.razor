@using Models.Characters
@using Models.Common

@if (!Harm.HasHarmAtIntensity(Intensity))
	return;

<div class="horizontal-stack">
	<p>@PrefixText:</p>
	@if (IsFixMode)
	{
		@foreach (var description in HarmDescriptions)
		{
			<FluentButton IconEnd="new Icons.Filled.Size20.Delete()" Appearance="Appearance.Accent" OnClick="_ => RemoveHarm(description)" Title="@AriaLabel(description)">@description</FluentButton>
		}
	}
	else
	{
		<p>@HarmDescriptions.Join("; ")</p>
	}
</div>
