@using Models.Characters
@using UI.Services
@inject SheetJank SheetJank
@implements IDisposable

<FluentGrid Spacing="0">
	<FluentGridItem xs="6" sm="4">
		<FluentCheckbox Value="Character.IsStandardArmorUsed" Disabled="!Character.HasArmor" Label="Armor" ValueChanged="b => StandardArmorChecked(b)" />
	</FluentGridItem>
	<FluentGridItem xs="6" sm="4">
		<FluentCheckbox Value="Character.IsHeavyArmorUsed" Disabled="!Character.HasHeavyArmor" Label="Heavy Armor" ValueChanged="b => HeavyArmorChecked(b)" />
	</FluentGridItem>
	@if (Character.HasSpecialArmor)
	{
		<FluentGridItem xs="12" sm="4">
			<FluentCheckbox Value="Character.IsSpecialArmorUsed" Label="Special Armor" ValueChanged="b => SpecialArmorChecked(b)" />
		</FluentGridItem>
	}
</FluentGrid>
