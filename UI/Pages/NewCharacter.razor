@page "/new/{GameFileStem?}"
@using Microsoft.FluentUI.AspNetCore.Components
@using Models.Characters
@using Models.Settings
@using Persistence.Json
@using UI.Components
@using UI.Components.NewCharacter
@using Orientation = Microsoft.FluentUI.AspNetCore.Components.Orientation
@using HorizontalAlignment = Microsoft.FluentUI.AspNetCore.Components.HorizontalAlignment
@using Justify = Microsoft.FluentUI.AspNetCore.Components.JustifyContent
@inject ILoader Loader

<FluentStack Orientation="Orientation.Vertical" HorizontalAlignment="HorizontalAlignment.Center">
	<h2>@GameName</h2>
	<h3>Choose a playbook.</h3>
	<FluentGrid>
		@foreach (var (book, hook) in options)
		{
			<FluentGridItem xs="12" Justify="Justify.Center">
				<NewCharacterPlaybookOption GameFileStem="@GameFileStem" PlaybookName="@book" Hook="@hook" />
			</FluentGridItem>
		}
	</FluentGrid>
</FluentStack>